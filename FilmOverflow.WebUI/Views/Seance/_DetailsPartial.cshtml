@model FilmOverflow.WebUI.ViewModels.SeanceViewModel

@{
	ViewBag.Title = "Seance Details";
}

<div class="well-lg">
	<h3 class="text-danger" id="seanceModalLabel">@ViewBag.Title</h3>	
	<dl class="dl-horizontal">
		<dt class="text-info">
			@Html.DisplayNameFor(model => model.Date)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Date)
		</dd>

		<dt class="text-info">
			@Html.DisplayNameFor(model => model.Time)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Time)
		</dd>

		<dt class="text-info">
			@Html.DisplayNameFor(model => model.Price)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Price)	  
			@Html.HiddenFor(model => model.Price)
		</dd>

		<dt class="text-info">
			@Html.DisplayNameFor(x => x.Hall.Cinema) - @Html.DisplayNameFor(x => x.Hall)
		</dt>

		<dd>
			@Model.Hall.Cinema.Name - @Model.Hall.Name
		</dd>

		<dt class="text-warning">
			@Html.DisplayNameFor(x => x.Film)
		</dt>

		<dd>
			@Model.Film.Title
		</dd>
	</dl>
</div>

