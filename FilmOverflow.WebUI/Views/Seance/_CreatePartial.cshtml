@model FilmOverflow.WebUI.ViewModels.SeanceViewModel

<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title" id="seanceModalLabel">Create seance</h4>
		</div>

		@using (Html.BeginForm("Create", "Seance", null, FormMethod.Post, new { @class = "form-horizontal" }))
		{
			<div class="modal-body">
				@Html.AntiForgeryToken()
				@Html.HiddenFor(m => m.FilmId)

				@Html.ValidationSummary(true, "", new { @class = "text-danger" })

				<div class="form-group">
					@Html.LabelFor(m => m.Date, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Time, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Time, "", new { @class = "text-danger" })
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Price, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
					</div>
				</div>
				@*<div class="form-group">
					@Html.LabelFor(m => m.Type, new { @class = "col-md-3 control-label" })
					<div class="col-md-9">
						@Html.DropDownListFor(m => m.Type, selectList, new { @class = "form-control" })
					</div>
				</div>*@
			</div>

			<div class="modal-footer">
				<button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
				<input class="btn btn-primary" type="submit" value="Create" />
			</div>
		}
	</div>
</div>