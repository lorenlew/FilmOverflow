@{
	ViewBag.Title = "Seance management";
}

<!-- modal placeholder-->
<div id="seanceModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="seanceModalLabel" aria-hidden="true">
	<div id="seanceModalContent"></div>
</div>

<h1 class="text-center well well-lg">@ViewBag.Title</h1>

<div class="form-group pull-right">
	@*@Html.ActionLink(" ", "Create", "Seance", routeValues: new { filmId = ViewBag.FilmId }, htmlAttributes: new { @class = "btn btn-success fa fa-plus" })*@
	@Ajax.ActionLink(" ", "Create", "Seance", routeValues: new { filmId = ViewBag.FilmId }, ajaxOptions: new AjaxOptions()
	{
		HttpMethod = "Get",
		InsertionMode = InsertionMode.Replace,
		UpdateTargetId = "seanceModalContent"
	}, htmlAttributes: new { @class = "btn btn-success fa fa-plus", data_toggle = "modal", data_target = "#seanceModal" })
</div>

<div id="SeanceList">
	@{ Html.RenderAction("List", "Seance"); }
</div>