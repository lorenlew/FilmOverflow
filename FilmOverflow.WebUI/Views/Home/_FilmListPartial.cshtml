@using FilmOverflow.WebUI.Helpers
@model IEnumerable<FilmOverflow.WebUI.ViewModels.FilmViewModel>
@{
	var counter = 1;
}  

@foreach (var film in Model)
{
	if ((counter + 2) % 3 == 0)
	{
		@Html.Raw("<section>")
	}
	<div class="col-sm-6 col-md-4">
		<div class="thumbnail no-shadow" style="height: 540px">
			<img src=@film.ImagePath class="img-thumbnail" alt="..." />
			<div class="caption">
				<h3 class="text-uppercase text-warning">@film.Title</h3>
				<p class="text-info">@film.Description.TrimEndIfLongerThan(140)</p>
				<p>@Html.ActionLink("  Details", "Details", "Home", new { filmId = film.Id }, new { @class = "btn btn-primary fa fa-info-circle bottom-right fa-lg", title = "View" })</p>
			</div>
		</div>
	</div>
	if (counter % 3 == 0)
	{
		@Html.Raw("</section>")
	}
	counter++;
}
