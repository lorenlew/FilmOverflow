@using FilmOverflow.WebUI.Helpers
@model IEnumerable<FilmOverflow.WebUI.ViewModels.FilmViewModel>

@foreach (var film in Model)
{
	<div class="col-sm-6 col-md-4">
		<div class="thumbnail no-shadow" style="height: 630px">
			<img src=@film.ImagePath class="img-thumbnail" alt="..." />
			<div class="caption">
				<h3 class="text-uppercase">@film.Title</h3>
				<p>@film.Description.TrimEndIfLongerThan(140)</p>
				<p>@Html.ActionLink("View", "Details", "Home", new { filmId = film.Id }, new { @class = "btn btn-default" })</p>
			</div>
		</div>
	</div>
}
