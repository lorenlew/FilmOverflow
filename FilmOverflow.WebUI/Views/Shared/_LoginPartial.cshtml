@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
	using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
	{
		@Html.AntiForgeryToken()

		<ul class="nav navbar-nav navbar-right">
			<li>@Html.ActionLink(" ", "Summary", "Account", null, new {@class = "fa fa-user fa-2x", title = "User Account"})</li>
			@if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
			{
				<li>
					@Html.ActionLink(" ", "UserManagement", "UserManipulation", null, new {@class = "fa fa-exchange fa-2x", title = "User Management"})
				</li>
			}
			<li>
				@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Security" })
			</li>
			<li><a class="fa fa-sign-out fa-2x" title="Log off" href="javascript:document.getElementById('logoutForm').submit()"></a></li>
		</ul>
	}
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li>@Html.ActionLink(" ", "Register", "Account", routeValues: null, htmlAttributes: new {@class = "fa fa-user fa-2x", id = "registerLink", title = "Register"})</li>
		<li>@Html.ActionLink(" ", "Login", "Account", routeValues: null, htmlAttributes: new {@class = "fa fa-sign-in fa-2x", id = "loginLink", title = "Log in"})</li>
	</ul>
}