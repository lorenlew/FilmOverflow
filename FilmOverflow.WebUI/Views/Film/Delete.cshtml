@model FilmOverflow.WebUI.ViewModels.FilmViewModel

@{
	ViewBag.Title = "Are you sure you want to delete this film?";
}

<h1 class="text-center well well-lg">@ViewBag.Title</h1>

<div class="panel panel-info no-shadow">
	<div class="panel-body">
		<div class="row">
			<div class="col-md-3 col-lg-3 " align="center">
				<img src="@Model.ImagePath" class="img-responsive img-thumbnail" alt="No image" />
			</div>

			<div class=" col-md-9 col-lg-9 ">
				<table class="table">
					<tbody>
						<tr>
							<td>@Html.DisplayNameFor(model => model.Title)</td>
							<td>@Html.DisplayFor(model => model.Title)</td>
						</tr>
						<tr>
							<td>@Html.DisplayNameFor(model => model.Duration)</td>
							<td>@Html.DisplayFor(model => model.Duration) min</td>
						</tr>
					</tbody>
				</table>
				<div class="col-md-12">
					@Html.DisplayFor(model => model.Description)
				</div>
			</div>

		</div>
	</div>
	<div class="panel-footer">
		@using (Html.BeginForm("Delete", "Film", new { filmId = Model.Id }, FormMethod.Post))
		{
			@Html.AntiForgeryToken()

			<div class="pull-right">
				@Html.ActionLink("No", "Index", "Film", null, new { @class = "btn btn-default no-shadow" })
				<button type="submit" class="btn btn-danger no-shadow">Yes</button>
			</div>
			<div class="clearfix"></div>
		}
	</div>
</div>